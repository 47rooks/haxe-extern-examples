{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "hxml",
			"file": "build.hxml",
			"problemMatcher": [
				"$haxe-error"
			],
			"group": "build",
			"label": "hxml: build.hxml"
		},
		{
			"label": "Run-debugee",
			"type":"shell",
			"command":"haxe",
			"args": [
				"build.hxml",
				"-lib",
				"hxcpp-debug-server"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			]
		}
	]
}